  "description": "Node-RED nodes to ESPhome devices",
  "homepage": "https://github.com/twocolors/node-red-contrib-esphome",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/twocolors/node-red-contrib-esphome.git"
  },
